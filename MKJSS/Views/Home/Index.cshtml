@{
    ViewData["Title"] = "Hatfield Junior Swimming School";
}

<style>
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://source.unsplash.com/1600x900/?swimming-pool') no-repeat center center;
        background-size: cover;
        color: white;
        padding: 100px 0;
        margin-bottom: 30px;
    }
    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #007bff;
    }
    .card {
        transition: transform 0.3s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>

<div class="hero-section text-center">
    <h1 class="display-4">Welcome to Milton Keynes Junior Swimming School</h1>
    <p class="lead">Dive into excellence with our top-notch swimming lessons</p>
    <a href="#get-started" class="btn btn-primary btn-lg mt-3">Get Started</a>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt feature-icon"></i>
                    <h3 class="card-title">Flexible Schedule</h3>
                    <p class="card-text">Lessons available Monday, Wednesday, Friday, and Saturday.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user-graduate feature-icon"></i>
                    <h3 class="card-title">Expert Coaches</h3>
                    <p class="card-text">Experienced coaches teaching all grade levels from 1 to 5.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users feature-icon"></i>
                    <h3 class="card-title">Small Classes</h3>
                    <p class="card-text">Each lesson accommodates up to 4 learners for personalized attention.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5" id="get-started">
        <div class="col-md-6">
            <h2>Booking System Features</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> View timetable by day, grade level, or coach</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Book lessons for your current grade or one level higher</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Change or cancel bookings</li>
                <li class="list-group-item"><i class="fas fa-check text-success mr-2"></i> Review and rate attended lessons</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Getting Started</h2>
            <div class="list-group">
                <a asp-controller="Lessons" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-list mr-2"></i> View Lessons
                </a>
                <a asp-controller="Bookings" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-book mr-2"></i> Manage Bookings
                </a>
                <a asp-controller="Learners" asp-action="Register" class="list-group-item list-group-item-action">
                    <i class="fas fa-user-plus mr-2"></i> Register as a New Learner
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h2 class="card-title">Contact Us</h2>
                    <p class="card-text">If you have any questions or need assistance, please don't hesitate to contact us.</p>
                    <p class="card-text"><i class="fas fa-phone mr-2"></i> Phone: (123) 456-7890</p>
                    <p class="card-text"><i class="fas fa-envelope mr-2"></i> Email: info@mkjss.com</p>
                </div>
            </div>
        </div>
    </div>
</div>